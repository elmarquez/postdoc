{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:react/recommended",
    "prettier"
  ],
  "globals": {},
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "restParams": true,
      "spread": true
    }
  },
  "plugins": ["prettier", "react"],
  "rules": {
    "prettier/prettier": "error",
    "new-cap": 0,
    "no-console": "warn",
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-undef": 1,
    "no-unused-vars": "error",
    "no-var": 1,
    "require-jsdoc": 1,
    "spaced-comment": 0,
    "valid-jsdoc": 1
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
